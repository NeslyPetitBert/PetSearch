{% extends '/layouts/account.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}
    Modification du mot de passe
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/account/css/sign-up.css') }}">
{% endblock %}

{% block body %}
    <div class="limiter">
        <div class="container-login100">
            <div class="login100-more" style="background-image: url('{{ asset('assets/account/images/bg-02.jpg') }}');"></div>

            <div class="wrap-login100 p-l-50 p-r-50 p-t-72 p-b-50">
                <span class="login100-form-title p-b-59">
                    Modification du mot de passe
                </span>

                {{ form_start(form) }}

                    <div class="wrap-input100">
                    {{ form_row(form.oldPassword) }}
                    </div>
                    <div class="wrap-input100">
                        {{ form_row(form.newPassword) }}
                    </div>
                    <div class="wrap-input100">
                        {{ form_row(form.confirmPassword) }}
                    </div>

                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn">
                                Modifier le mot de passe
                            </button>
                        </div>
                        <div class="col-md-3">&nbsp;</div>
                        <a href="{{ path('admin_account_profile') }}" class="dis-block txt3 hov1 p-r-30 p-t-10 p-b-10 p-l-30">
                            Revenir Ã  mon profil
                        </a>
                    </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}


{% block javascripts %}
    <script src="{{ asset('assets/account/js/sign-up.js') }}"></script>
{% endblock %}