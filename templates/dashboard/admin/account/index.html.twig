{% extends "/layouts/dashboard_layout.html.twig" %}

{% block title %}Les administrateurs{% endblock %}
        
{% block body %}

	<div class="container-fluid">

	  <!-- Page Heading -->
	  <p class="mb-4"><a href="{{ path('admin_account_new')}}" class="btn btn-success">Ajouter Un nouvel Utilisateur</a></p>
	  <!-- DataTales Example -->
	  <div class="card shadow mb-4">
			<div class="card-header py-3">
				<h6 class="m-0 font-weight-bold text-primary">Tables des administrateurs</h6>
			</div>
			<div class="card-body">
				<div class="table-responsive">
					<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
						<thead style="color:#005582 !important;">
							<tr>
							<th>#</th>
							<th>Nom</th>
							<th>Prénom</th>
							<th>Email</th>
							<th>Rôles</th>
							<th>Voir</th>
							<th>Modifier</th>
							<th>Supprimer</th>
							</tr>
						</thead>
						<tfoot style="color:#005582 !important;">
							<tr>
							<th>#</th>
							<th>Nom</th>
							<th>Prénom</th>
							<th>Email</th>
							<th>Rôles</th>
							<th>Voir</th>
							<th>Modifier</th>
							<th>Supprimer</th>
							</tr>
						</tfoot>
						<tbody>
							{% for adminUser in adminUsers %}
								{% if loop.index is divisible by(2) %}
									<tr style="background-color:#f4f3f6 !important;">
										{% include "/dashboard/admin/account/users_admin_array.html.twig" %}
									</tr>
									{% else %}
										<tr style="background-color:#fbf9ff !important;">
										{% include "/dashboard/admin/account/users_admin_array.html.twig" %}
									</tr>
								{% endif %}
							{% endfor %}
						</tbody>
					</table>
					{% set countRows = adminUsers.getTotalItemCount %}
					{% set entity = adminUsers %}

					{% include "/dashboard/partials/dashboard_partials/pagination.html.twig" %}

				</div>
			</div>
	  	</div>
	</div>
{% endblock %}