{% extends "/layouts/dashboard_layout.html.twig" %}

{% block title %}Les animaux{% endblock %}
        
{% block body %}

	<div class="container-fluid">

	  <!-- Page Heading -->
	  <p class="mb-4"><a href="{{ path('pet_register')}}" class="btn btn-success">Ajouter un nouvel animal</a></p>
	  <!-- DataTales Example -->
	  <div class="card shadow mb-4">
			<div class="card-header py-3">
				<h6 class="m-0 font-weight-bold text-primary">Tables des animaux</h6>
			</div>
			<div class="card-body">
				<div class="table-responsive">
					<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" margin="auto">
						<thead style="color:#005582 !important;">
							<tr>
							<th>#</th>
							<th>Nom</th>
							<th>Type</th>
							<th>Race</th>
							<th>Aniversaire</th>
							<th>Sexe</th>
                            <th>Date d'acquisition</th>
                            <th>Date de création</th>
                            <th>Date de modification</th>
                            <th>Propriétaire</th>
							<th>Modifier</th>
							<th>Supprimer</th>
							</tr>
						</thead>
						<tfoot style="color:#005582 !important;">
							<tr>
							<th>#</th>
							<th>Nom</th>
							<th>Type</th>
							<th>Race</th>
							<th>Aniversaire</th>
							<th>Sexe</th>
                            <th>Date d'acquisition</th>
                            <th>Date de création</th>
                            <th>Date de modification</th>
                            <th>Propriétaire</th>
							<th>Modifier</th>
							<th>Supprimer</th>
							</tr>
						</tfoot>
						<tbody>
							{% for pet in pets %}
							{% if loop.index is divisible by(2) %}
								<tr style="background-color:#f4f3f6 !important;">
									{% include "/dashboard/petsearch/pet/pets_admin_array.html.twig" %}
								</tr>
								{% else %}
									<tr style="background-color:#fbf9ff !important;">
									{% include "/dashboard/petsearch/pet/pets_admin_array.html.twig" %}
								</tr>
								{% endif %}
							{% endfor %}
						</tbody>
					</table>

					{% set countRows = pets.getTotalItemCount %}
					{% set entity = pets %}

					{% include "/dashboard/partials/dashboard_partials/pagination.html.twig" %}
				</div>
			</div>
	  	</div>
	</div>
{% endblock %}