{% extends "/layouts/dashboard_layout.html.twig" %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block title %}Ajouter un utilisateur{% endblock %}

{% block body %}
<!-- Begin Page Content -->
    <div class="container-fluid">

        <div class="row">
            <div class="col-lg-6">

                <!-- Dropdown Card Example -->
                <div class="card shadow mb-4">
                    <!-- Card Header - Dropdown -->
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Ajouter un nouvel utilisateur</h6>
                    </div>
                    <!-- Card Body -->
                    <div class="card-body">
                        <!-- Card Body -->
                        {{ form_start(form) }}

                            <div class="wrap-input100">
                                {{ form_row(form.firstName) }}
                            </div>
                            <div class="wrap-input100">
                                {{ form_row(form.lastName) }}
                            </div>
                            <div class="wrap-input100">
                                {{ form_row(form.email) }}
                            </div>
                            <div class="wrap-input100">
                                {{ form_row(form.hash) }}
                            </div>
                            <div class="wrap-input100">
                                {{ form_row(form.passwordConfirm) }}
                            </div>
                            <div class="wrap-input100">
                                {{ form_row(form.roles) }}
                            </div>
                            <div class="form-group">
                                {{ form_rest(form) }}
                            </div>
                            <button type="submit" class="btn btn-success mr-2">Créer</button>
                            <a href="{{ path('admin_accounts_index') }}" class="btn btn-primary">
                                Revenir à la liste des utilisateurs
                            </a>
                            <button class="btn btn-light" type="reset">Annuler</button>
                            </form>
                        {{ form_end(form) }}
                    </div>
                </div>

            </div>

        </div>

    </div>
    <!-- /.container-fluid -->
{% endblock %}
