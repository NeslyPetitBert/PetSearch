{% extends "/layouts/dashboard_layout.html.twig" %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block title %}Modification de la facture N° {{ billing.idbilling }} {% endblock %}

{% block body %}
<!-- Begin Page Content -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">

                <!-- Dropdown Card Example -->
                <div class="card shadow mb-4">
                    <!-- Card Header - Dropdown -->
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Modification de la facture N° {{ billing.idbilling }} / Client : {{ billing.userIduser.fullName }}</strong></h6>
                    </div>
                    <!-- Card Body -->
                    <div class="card-body">
                        {{ form_start(form) }}

                            <div class="wrap-input100">
                                {{ form_row(form.datebilling) }}
                            </div>
                            <div class="wrap-input100">
                                {{ form_row(form.amount) }}
                            </div>
                            <div class="wrap-input100">
                                {{ form_row(form.userIduser) }}
                            </div>
                            <div class="form-group">
                                {{ form_rest(form) }}
                            </div>
                            <button type="submit" class="btn btn-success mr-2">Enregistrer les modifications</button>
                            <button class="btn btn-dark" type="reset">Annuler</button>
                            <a href="{{ path('billing_delete', {'id': billing.idbilling}) }}" class="btn btn-danger"
                                onclick="return confirm((`Êtes-vous sûre de vouloir supprimer la facture N° : {{ billing.idbilling }} ?`))">
                                Supprimer cette facture
                            </a>
                            <hr>
                            <a href="{{ path('accounts_index') }}" class="btn btn-primary">
                                Revenir à la liste des factures
                            </a>
                            <a href="{{ path('billing_register')}}" class="btn btn-success">
                                Créer une nouvelle facture
                            </a>
                            <a href="{{ path('admin_billing_show', {'id': billing.idbilling}) }}" class="btn btn-primary">
                                Revenir sur la facture
                            </a>
                        {{ form_end(form) }}
                    </div>
                </div>

            </div>

        </div>

    </div>
    <!-- /.container-fluid -->
{% endblock %}