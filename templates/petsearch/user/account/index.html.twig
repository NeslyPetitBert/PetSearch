{% extends '/layouts/base.html.twig' %}

{% block title %} | {{ user.fullName }} - Mon compte{% endblock %}

{% block slider %}
<section id="page-title" class="page-title bg-overlay bg-parallax bg-overlay-gradient">
    <div class="bg-section">
        <img src="{{ asset('assets/images/page-title/bg-user.jpg')}}" alt="Background" />
    </div>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
                <div class="title--account title-4 text-center">
                    <div class="title--content">
                        <div class="title--subtitle">Espace personnel</div>
                    </div>
                    <div class="clearfix"></div>
                    <ol class="breadcrumb">
                        <li><a href="{{ path('home') }}">Accueil</a></li>
                        <li><a href="#">{{ user.fullName }}</a></li>
                    </ol>
                    <div class="divider--shape-1down divider--shape-gray"></div>
                </div>
                {# .title end #}
            </div>
            {# .col-md-12 end #}
        </div>
        {# .row end #}
    </div>
    {# .container end #}
</section>
{% endblock %}
{% block body %}
    <section id="shop" class="shop shop-4 bg-gray pb-90">
        <div class="container">
            <div class="row align-items-center mt-5">
                <div class="col-3 text-center">
                    {% if user.filename %}
                    <div><img src="{{ vich_uploader_asset(user, 'imageFile')}}" alt="Avatar de {{ user.fullName }}" class="avatar mb-3"></div>
                    {% endif %}
                    <br>

                </div>
                <div class="col-9 text-center">
                    <h1>{{ user.fullName }}</h1>
                </div>
                <div class="col-9 text-left">
                    {% if user is same as (app.user) %}

                            <a href="{{ path('account_profile') }}" class="btn btn-inverse-primary mr-2 mb-2">Modifier mes informations</a><hr>
                            <a href="{{ path('account_password') }}" class="btn btn-inverse-primary mr-2 mb-2">Modifier mon mot de passe</a><hr>
                            <a href="{{ path('booking_index') }}" class="btn btn-inverse-primary mr-2 mb-2">Tous mes animaux</a><hr>


                            <h6>Description</h6>
                            {{ user.introduction | raw }}<hr>

                        {#<span class="badge badge-primary">{{ user.bookings|length }} réservations</span><hr>#}
                        {#<a href="{{ path('user_delete', {'id' : user.id }) }}" onclick="return confirm((`Êtes-vous sûre de vouloir supprimer votre compte tilisateur ?`))">Supprimer mon compte</a><hr>#}
                    {% endif %}

                </div>
            </div>
        </div>
    </section>
{% endblock %}
